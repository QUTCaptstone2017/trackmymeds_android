<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        app:theme="@style/tmmToolbar"
        app:popupTheme="@style/tmmToolbar"
        style="@style/tmmToolbar" />

    <ProgressBar
        android:id="@+id/med_list_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ScrollView
            android:id="@+id/med_list_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <ListView
                android:id="@+id/med_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dividerHeight="5sp"
                android:entries="@array/add_medication_products"
                android:theme="@style/tmmListView" />
        </ScrollView>

    </LinearLayout>

</LinearLayout>